<div class="burger-div">
  <img src="/assets/burger.gif" alt="image">
</div>
<h1>Eat these Burgers!</h1>
<form class="create-form input-form">
  <div class="form-group input-div">
    <label class="label" for="burger">New burger </label>
    <input class="input-field" type="text" id="burger" name="burger_name">
    <button class="btn-add" type="submit">Add it to plate!</button>
  </div>

</form>

<div class="group">
  <div class="burgers-to-eat">
    <h2>These burgers are ready!</h2>
    <ul class="list">
      {{#each burgers}}
      {{#unless devoured}}
      {{this.id}} - {{this.burger_name}}
      <button class="change-devoured" data-id="{{id}}" value="1">EAT IT!!</button>
      <hr>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  
  <div class="filler"></div>

  <div class="burgers-gone">
    <h2>These burgers are history!</h2>
    <ul class="list">
      {{#each burgers}}
      {{#if devoured}}
      <hr>
      <span> {{this.id}} - {{this.burger_name}}</span>
      {{!-- <button class="delete-burger" data-id="{{id}}">Delete it!!</button> --}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>